# 基础配置
APP_NAME=大模型本地化后端
DEBUG=false
HOST=0.0.0.0
PORT=8000

# 模型配置
MODELS_DIR=./models
DEFAULT_MODEL=
MAX_MODEL_MEMORY_GB=8.0
MODEL_CACHE_SIZE=3

# 对话配置
MAX_CONVERSATION_LENGTH=4096
MAX_RESPONSE_TOKENS=2048
TEMPERATURE=0.7
TOP_P=0.9

# 数据库配置
DATABASE_URL=sqlite:///./llm_backend.db
REDIS_URL=redis://localhost:6379

# 安全配置
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 文件上传配置
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=104857600
ALLOWED_EXTENSIONS=.txt,.json,.csv,.md

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=./logs/backend.log

# 模型服务配置
ENABLE_GPU=true
GPU_MEMORY_FRACTION=0.8
QUANTIZATION=none
